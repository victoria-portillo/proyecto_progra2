    <%- include('./partials/header') %>


        <main>
            <div class="user-detail container">
                <h1>Resultados de b√∫squeda</h1>
                <section class="bottom">
                    <% if (posteos.length> 0) { %>
                        <% for ( let i=0 ; i < posteos.length; i++) { %>
                            <div>
                                <section>


                                    <figure>
                                        <a href="/posteos/detalle/<%=posteos[i].id%>">
